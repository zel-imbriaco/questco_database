<%= form_with url: '/adventurers', method: :post, local: true do |form| %>
  <%= form.hidden_field :party_id, value: @party.id %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :level %>
  <%= form.text_field :level %>
  <br />
  <%= form.label :alive %>
  <%= form.check_box :alive %>
  <%= form.submit "Create Adventurer" %>
<% end %>